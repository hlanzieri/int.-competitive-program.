#include <iostream>

using namespace std;

int main()
{
    int N, soma=0, x=0;
	cin >> N;
	int A[N];
	for(int i=0; i<N; i++){
        cin >> A[i];
    }
    for(int i=0; i<N; i++){
        soma+=A[i];
        x++;
        if(soma>=1000000){
            cout << endl;
            cout << x;
            break;
        }
    }
    return 0;
}
